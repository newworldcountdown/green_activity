<%= stylesheet_link_tag "devise", :media => "all" %>
<body class="container">
  <h1 class="mt-5">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, class:"mt-3" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "mt-5" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "mt-4" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>
    <br>
    <%= link_to "TOPページへ戻る", root_path %>
  <% end %>

  <%#= render "devise/shared/links" %>
</body>
