<%= stylesheet_link_tag "devise", :media => "all" %>

<body class="container">
  <h1 class="mt-5">新規登録</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class:"mt-4" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :name, class:"mt-4" %> <br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :password, class:"mt-4" %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %> 文字以上)
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"mt-4" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class:"btn btn-success" %>
    </div>
    <br>  
    <%= link_to "TOPページへ戻る", root_path %>
  <% end %>

  <%#= render "devise/shared/links" %>
</body>
